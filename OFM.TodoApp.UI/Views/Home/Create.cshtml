@model WorkCreateDto
<html>
<head>
    <title>Todo App</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    ,
    <div class="container my-2">
        <form asp-action="Create" asp-controller="Home" method="post">
            <div class="mb-3">
                <label>İş tanımı : </label>
                <input class="form-control" asp-for="@Model.Definition" />
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="@Model.IsCompleted" >
                <label class="form-check-label" for="IsCompleted">
                    Tamamlandı Mı ? 
                </label>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
            <div asp-validation-summary="All" class="text-danger">

            </div>
        </form>
    </div>
</body>

</html>